<Window x:Class="FPConnect.view.Pages.Forms.FormDelete"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FPConnect.view.Pages.Forms"
        mc:Ignorable="d"
        Title="Eliminar" WindowStartupLocation="CenterScreen" WindowStyle="None" AllowsTransparency="True" Background="#80000000" WindowState="Maximized" Topmost="True">
    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <Border Background="#F7F6F4" BorderBrush="Black" BorderThickness="2" Padding="20"
        CornerRadius="10" Width="400">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Aviso" Foreground="Red" FontSize="23" Style="{StaticResource titleText}" HorizontalAlignment="Left"/>
                    <Image Source="/Images/borrar.png" Grid.Column="1" Width="25" Margin="10 0 0 0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
                
                
                <TextBlock Text="¿Está seguro de que lo desea eliminar?" Style="{StaticResource titleText}" Margin="0 10 0 0"/>
                <TextBlock Text="Nota: Los cambios no se podrán revertir" FontStyle="Italic" FontSize="14" FontWeight="Medium" Style="{StaticResource titleText}" Margin="0 10 0 0"/>
        
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 40 0 0">
                    <Button Content="Aceptar" Margin="0 0 180 0" Width="80" Click="Guardar_Click" Style="{StaticResource buttonMainGreenGestionUsuarios}" Height="30"/>
                    <Button Content="Cerrar" Width="80" Margin="10,0,0,0" Click="Cancelar_Click" Style="{StaticResource buttonMainGestionUsuarios}" Height="30"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
