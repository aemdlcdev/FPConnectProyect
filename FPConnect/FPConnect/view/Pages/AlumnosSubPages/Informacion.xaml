<Page x:Class="FPConnect.view.Pages.AlumnosSubPages.Informacion"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FPConnect.view.Pages.AlumnosSubPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Informacion">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Informacion" Style="{StaticResource titleText}" FontSize="24"/>

        <Border Background="#F7F6F4" CornerRadius="20" Grid.Row="1">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Ejemeplo" Style="{StaticResource titleText}"/>
                <TextBlock Text="Ejemeplo" Grid.Row="1" Margin="0 10 0 0" Style="{StaticResource titleText}"/>
                <TextBlock Text="Ejemeplo" Grid.Row="2" Margin="0 10 0 0" Style="{StaticResource titleText}"/>
            </Grid>
        </Border>
        
    </Grid>
</Page>
